<div class="section bg-gradient" id="contact">
        <div class=" container ">
            <div class="call-to-action ">

                <div class="box-icon "><span><img src="/static/images/phone.png" style="height: 25px;"></span></div>
                <div class="container" style="display: flex; flex-direction: column; align-items: center; ">
                    <div class="form-group col-md-5">
                        <h3>Book Now</h3>
                        <form action="/process-book-form" method="POST" style="display:grid; ">

                            <input type="text" id="firstname" name="Name" placeholder="Name " style="border-radius: 10px;" required /><br>
                            <input type="number" id="lastname" name="Mobile" placeholder="Mobile " style="border-radius: 10px;" required><br>                           
                            <input type="email" id="email" name="email" placeholder="Email ID " style="border-radius: 10px;" required>
                            <br>
                            <input type="date" id="Fdate" name="Fdate" style="border-radius: 10px;" required>
                            <label>From Date</label>
                            <input type="date" id="Tdate" name="Tdate" style="border-radius: 10px;" required>
                            <label>To Date</label>
                              
                            <select name="Unit" id="cars"  required>
                                <option value="None">Select Id</option>
                                <option value="HP 14s Intel Core i3 11th Gen">101</option>
                                <option value="ASUS ROG Strix G15">102</option>
                                <option value="HP Pavilion">103</option>
                                <option value="Lenovo V15 Intel Celeron">104</option>
                            </select>
                            <label for="cars">Choose Id:</label>
                            <br>
                            <textarea id="query" name="Requirements" placeholder="Give us your Requirement " style="height:200px;border-radius: 10px;" required></textarea>
                            <br>
                            <input type="submit" id="submit" value="Submit" style="border-radius: 40px; ">
                    </div>
                    </form>
                </div>
            </div>
        </div>

    </div>




